<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="4dp">

		<ImageView
			android:id="@android:id/icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:padding="8dp"
			tools:src="@drawable/ic_bug_red" />

		<TextView
			android:id="@android:id/text1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_toEndOf="@android:id/icon"
			android:layout_toRightOf="@android:id/icon"
			android:lines="1"
			android:padding="4dp"
			android:singleLine="true"
			android:textAppearance="@style/TextAppearance.AppCompat.Body2"
			tools:text="@string/error_occurred" />

		<TextView
			android:id="@android:id/text2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_below="@android:id/text1"
			android:layout_toEndOf="@android:id/icon"
			android:layout_toRightOf="@android:id/icon"
			android:paddingLeft="4dp"
			android:paddingRight="4dp"
			android:textAppearance="@style/TextAppearance.AppCompat.Body1"
			android:textColor="?android:attr/textColorSecondary"
			tools:text="@string/application_crashed" />

		<org.nv95.openmanga.common.views.BorderlessButton
			android:id="@android:id/button1"
			style="@style/Widget.AppCompat.Button.Borderless.Colored"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_below="@android:id/text2"
			tools:text="@string/report" />

	</RelativeLayout>
</android.support.v7.widget.CardView>